{
  "name": "wb-automation-v2",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.6.1",
  "scripts": {
    "dev:backend": "pnpm --filter @wb-automation-v2/backend dev",
    "dev:bot": "pnpm --filter @wb-automation-v2/bot dev",
    "scheduler:sync:start": "bash ./scripts/sync-content-scheduler.sh start",
    "scheduler:sync:stop": "bash ./scripts/sync-content-scheduler.sh stop",
    "scheduler:sync:status": "bash ./scripts/sync-content-scheduler.sh status",
    "scheduler:sync:run": "bash ./scripts/sync-content-scheduler.sh run",
    "db:up": "docker compose up -d --wait postgres",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && pnpm db:up && pnpm db:migrate",
    "db:push": "pnpm --filter @wb-automation-v2/db drizzle:push",
    "db:generate": "pnpm --filter @wb-automation-v2/db drizzle:generate",
    "db:migrate": "pnpm --filter @wb-automation-v2/db drizzle:migrate",
    "db:studio": "pnpm --filter @wb-automation-v2/db drizzle:studio",
    "wb:gen": "pnpm --filter @wb-automation-v2/wb-clients gen",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "pnpm -r --if-present typecheck",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "oxlint": "^1.48.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
