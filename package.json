{
  "name": "wb-automation-v2",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.6.1",
  "scripts": {
    "dev:backend": "ENV_FILE=../../.env.local pnpm --filter @wb-automation-v2/backend dev",
    "dev:bot": "ENV_FILE=../../.env.local pnpm --filter @wb-automation-v2/bot dev",
    "scheduler:sync": "bash ./scripts/sync-content-scheduler.sh",
    "scheduler:wb-token-expiration": "bash ./scripts/wb-token-expiration-scheduler.sh",
    "prod:up": "docker compose --env-file .env up -d --build",
    "prod:down": "docker compose --env-file .env down",
    "prod:migrate": "docker compose --env-file .env run --rm -e WB_ENV=production backend pnpm --filter @wb-automation-v2/db drizzle:migrate",
    "prod:restart:backend": "docker compose --env-file .env restart backend",
    "prod:restart:bot": "docker compose --env-file .env restart bot",
    "prod:logs": "docker compose --env-file .env logs -f backend bot scheduler-sync-content scheduler-wb-token-expiration scheduler-logs-cleanup",
    "prod:job:sync": "docker compose --env-file .env --profile manual run --rm job-sync-content",
    "prod:job:sync-content": "pnpm prod:job:sync",
    "prod:job:wb-token-expiration": "docker compose --env-file .env --profile manual run --rm job-wb-token-expiration",
    "prod:job:logs-cleanup": "docker compose --env-file .env --profile manual run --rm job-logs-cleanup",
    "db:local:up": "docker compose --env-file .env.local -f local-db.docker-compose.yml up -d --wait postgres",
    "db:local:down": "docker compose --env-file .env.local -f local-db.docker-compose.yml down",
    "db:local:reset": "docker compose --env-file .env.local -f local-db.docker-compose.yml down -v && pnpm db:local:up && pnpm db:migrate",
    "db:push": "WB_ENV=local pnpm --filter @wb-automation-v2/db drizzle:push",
    "db:generate": "WB_ENV=local pnpm --filter @wb-automation-v2/db drizzle:generate",
    "db:migrate": "WB_ENV=local pnpm --filter @wb-automation-v2/db drizzle:migrate",
    "db:studio": "WB_ENV=local pnpm --filter @wb-automation-v2/db drizzle:studio",
    "wb:gen": "pnpm --filter @wb-automation-v2/wb-clients gen",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "pnpm -r --if-present typecheck",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "oxlint": "^1.49.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
