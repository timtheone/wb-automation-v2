{
  "name": "@wb-automation-v2/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "dotenv -e ${ENV_FILE:-../../.env.local} -- tsx watch src/index.ts",
    "start": "node dist/index.js",
    "sync:content:run": "node dist/run-sync-content-job.js",
    "wb:token:expiration:run": "node dist/run-wb-token-expiration-job.js",
    "openapi:write": "dotenv -e ${ENV_FILE:-../../.env.local} -- tsx src/write-openapi.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.2",
    "@wb-automation-v2/core": "workspace:*",
    "@wb-automation-v2/db": "workspace:*",
    "hono": "^4.12.0",
    "pg-boss": "^12.13.0",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "tsx": "^4.20.5"
  }
}
