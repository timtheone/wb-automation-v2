{
  "name": "@wb-automation-v2/bot",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "dotenv -e ${ENV_FILE:-../../.env.local} -- tsx watch src/index.ts",
    "start": "node dist/index.js",
    "gen:spec": "pnpm --filter @wb-automation-v2/backend openapi:write ../bot/src/docs/openapi-backend.json",
    "gen:types": "openapi-typescript ./src/docs/openapi-backend.json -o ./src/generated/backend-schema.d.ts",
    "gen": "pnpm gen:spec && pnpm gen:types",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "grammy": "^1.40.0",
    "openapi-fetch": "^0.17.0",
    "pino": "^10.3.1",
    "typesafe-i18n": "^5.27.1"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "openapi-typescript": "^7.13.0",
    "tsx": "^4.20.5"
  }
}
